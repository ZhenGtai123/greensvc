# =============================================================================
# GreenSVC Backend Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# --- LLM Provider (gemini | openai | anthropic | deepseek) ---
LLM_PROVIDER=gemini

# --- API Keys (fill in at least the one matching LLM_PROVIDER) ---
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=

# --- Model Names (optional, defaults shown) ---
GEMINI_MODEL=gemini-3-pro-preview
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-sonnet-4-20250514
DEEPSEEK_MODEL=deepseek-chat

# --- External Services ---
VISION_API_URL=http://127.0.0.1:8000

# --- Server Configuration ---
HOST=0.0.0.0
PORT=8080
DEBUG=false

# --- Redis Configuration (optional, needed for Celery async tasks) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# --- JWT Authentication (CHANGE IN PRODUCTION!) ---
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- PostgreSQL Database (not used yet, reserved for future) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/greensvc

# --- Paths (relative to backend/) ---
DATA_DIR=data
METRICS_LIBRARY_PATH=data/A_indicators.xlsx
METRICS_CODE_DIR=data/metrics_code
KNOWLEDGE_BASE_DIR=data/knowledge_base
OUTPUT_DIR=outputs
TEMP_DIR=temp
